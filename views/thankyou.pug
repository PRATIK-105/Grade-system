  // CSS styles
  style.
    .thankyou-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #f0f8ff; /* Light background color */
      text-align: center;
      padding: 20px;
      box-sizing: border-box;
    }
    .thankyou-container h1 {
      font-size: 2.5em;
      margin: 0;
      color: #333;
    }
    .thankyou-container p {
      font-size: 1.2em;
      color: #666;
      margin-top: 10px;
    }


    button {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
